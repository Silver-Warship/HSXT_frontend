{
  "extends": "@tsconfig/vite-react/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./", // 设置基准路径
    "paths": {
      "@/*": [
        "src/*"
      ] // 路径别名配置
    }
  },
  "include": [
    "src/**/*" // 包含的文件路径
  ],
  "exclude": [
    "node_modules", // 排除 node_modules 目录
    "build", // 排除构建产物目录
    "dist" // 排除 dist 目录
  ]
}